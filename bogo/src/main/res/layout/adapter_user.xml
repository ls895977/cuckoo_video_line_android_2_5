<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.gcssloop.widget.RCRelativeLayout
        android:id="@+id/rc_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:round_corner="10dp">

        <ImageView
            android:id="@+id/pagemsg_background"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:background="@mipmap/ic_launcher"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:id="@+id/live_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_beckoning_num"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/pagemsg_view_dian"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:src="@drawable/bg_green_num" />

            <TextView
                android:id="@+id/pagemsg_view_isonline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="2dp"
                android:text="@string/userinfo_bar_isonLine"
                android:textColor="@color/white"
                android:textSize="8sp" />
        </LinearLayout>


    </com.gcssloop.widget.RCRelativeLayout>

    <com.gcssloop.widget.RCRelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        app:round_corner="10dp">

        <TextView
            android:id="@+id/pagemsg_view_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:maxLines="1"
            android:maxWidth="50dp"
            android:singleLine="true"
            android:text="2222"
            android:textColor="@color/gray"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pagemsg_view_nice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/test_number"
            android:textColor="@color/colorGray5"
            android:textSize="12sp" />
        <!--<TextView-->
        <!--android:layout_centerVertical="true"-->
        <!--android:layout_marginLeft="5dp"-->
        <!--android:layout_toRightOf="@+id/pagemsg_view_name"-->
        <!--android:layout_gravity="center_vertical"-->
        <!--android:textSize="@dimen/text_size_10"-->
        <!--android:id="@+id/tv_level"-->
        <!--android:paddingBottom="1dp"-->
        <!--android:paddingTop="1dp"-->
        <!--android:paddingRight="8dp"-->
        <!--android:paddingLeft="8dp"-->
        <!--android:textColor="@color/white"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content" />-->
        <com.ailiaovideo.videoline.widget.BGLevelTextView
            android:id="@+id/tv_level"
            android:layout_width="30dp"
            android:layout_height="14dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/pagemsg_view_name"
            android:textSize="8dp" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/pagemsg_view_nice"
            android:src="@drawable/good_appraise"
            android:visibility="gone" />

        <TextView
            android:id="@+id/pagemsg_view_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pagemsg_view_name"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:singleLine="true"
            android:text="暂无签名字段"
            android:textColor="@color/gray"
            android:textSize="13sp" />

    </com.gcssloop.widget.RCRelativeLayout>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black" />

</LinearLayout>